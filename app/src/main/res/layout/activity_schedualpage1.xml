<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schedualpage1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1D4D6"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="287dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="30dp"
            android:background="#5F678F"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Schedual security staff"
                android:textColor="#090909"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:layout_marginTop="20dp"
            android:background="#5F678F"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="select security employee"
                android:textColor="#100E0E"
                android:textSize="24sp" />
            <ImageButton
                android:id="@+id/selectemp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="-50dp"
                android:onClick="chooseemp"
                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                tools:ignore="OnClick,VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="103dp"
                    android:layout_height="59dp"
                    android:text="Duration"
                    android:textColor="#131212"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="from:"
                    android:textColor="#121010"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="-30dp"

                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                    tools:ignore="OnClick,VectorDrawableCompat" />

                <TextView
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="-40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="To:"
                    android:textColor="#151414"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="-40dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                    tools:ignore="OnClick,VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/buildignbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="45dp"
                    android:onClick="choosebuilding"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                    tools:ignore="OnClick,VectorDrawableCompat" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-70dp"
                android:background="#FFFFFF"
                android:text="select building :"
                android:textColor="#0E0D0D"
                android:textSize="30sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_marginLeft="15dp"
            android:text="Add"
            style="@style/AlertDialog.AppCompat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_light_background"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:backgroundTint="#D2DAE1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>